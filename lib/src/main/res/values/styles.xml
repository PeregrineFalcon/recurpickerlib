<?xml version="1.0" encoding="utf-8"?><!-- @formatter:off -->
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="PrivateResource">

    <style name="RecurrencePickerStyleBase">
        <item name="rpTextAppearance">?textAppearanceBody1</item>

        <item name="rpToolbarThemeOverlay">@style/ThemeOverlay.MaterialComponents.Toolbar.Primary
        </item>

        <!-- Dialog min width range, fixes dialog getting shrunk to 20-30% width in split screen. -->
        <item name="windowMinWidthMajor">100%</item>
        <item name="windowMinWidthMinor">65%</item>

        <item name="rpListStyle">@style/RpListStyle</item>
        <item name="rpListItemStyle">@style/RpListItemStyle</item>
        <item name="rpListItemLabelStyle">@style/RpListItemLabelStyle</item>

        <item name="rpPickerDividerStyle">@style/RpPickerDividerStyle</item>
        <item name="rpPickerSubtitleTextAppearance">@style/RpPickerSubtitleTextAppearance</item>
        <item name="rpPickerInputLayoutStyle">@style/RpPickerInputLayoutStyle</item>
        <item name="rpPickerInputStyle">@style/RpPickerInputStyle</item>
        <item name="rpPickerDropdownLayoutStyle">@style/RpPickerDropdownLayoutStyle</item>
        <item name="rpPickerDropdownStyle">@style/RpPickerDropdownStyle</item>
        <item name="rpPickerWeekBtnStyle">@style/RpPickerWeekBtnStyle</item>
        <item name="rpPickerDialogWeekBtnStyle">@style/RpPickerDialogWeekBtnStyle</item>
    </style>

    <public name="RecurrencePickerStyle" type="style" />
    <style name="RecurrencePickerStyle" parent="RecurrencePickerStyleBase" />

    <public name="RpListStyle" type="style" />
    <style name="RpListStyle">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <public name="RpListItemStyle" type="style" />
    <style name="RpListItemStyle">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <public name="RpListItemLabelStyle" type="style" />
    <style name="RpListItemLabelStyle">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?rpTextAppearance</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
    </style>

    <public name="RpPickerDividerStyle" type="style" />
    <style name="RpPickerDividerStyle">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?colorOnBackground</item>
        <item name="android:alpha">0.12</item>
    </style>

    <public name="RpPickerSubtitleTextAppearance" type="style" />
    <style name="RpPickerSubtitleTextAppearance" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/material_on_surface_emphasis_medium</item>
    </style>

    <public name="RpPickerInputLayoutStyle" type="style" />
    <style name="RpPickerInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/mtrl_filled_background_color</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <public name="RpPickerInputStyle" type="style" />
    <style name="RpPickerInputStyle">
        <item name="android:textAppearance">?rpTextAppearance</item>
        <item name="android:gravity">center</item>
        <item name="boxStrokeColor">@null</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:imeOptions">flagNoExtractUi|actionDone</item>
    </style>

    <public name="RpPickerDropdownLayoutStyle" type="style" />
    <style name="RpPickerDropdownLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/mtrl_filled_background_color</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <public name="RpPickerDropdownStyle" type="style" />
    <style name="RpPickerDropdownStyle">
        <item name="android:textAppearance">?rpTextAppearance</item>
        <item name="boxStrokeColor">@null</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:inputType">none|textNoSuggestions</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:cursorVisible">false</item>
    </style>

    <public name="RpEndRadioStyle" type="style" />
    <style name="RpEndRadioStyle">
        <item name="android:minWidth">0dp</item>
    </style>

    <public name="RpPickerWeekBtnStyle" type="style" />
    <style name="RpPickerWeekBtnStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">@dimen/rp_week_btn_size</item>
        <item name="android:layout_height">@dimen/rp_week_btn_size</item>
        <item name="android:checkable">true</item>
        <item name="android:textAppearance">?rpTextAppearance</item>
        <item name="android:textColor">@color/rp_week_btn_text</item>
        <item name="backgroundTint">@color/rp_week_btn_color</item>
        <item name="android:padding">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="shapeAppearanceOverlay">@style/RpShapeAppearanceOverlayRound</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">@null</item>
    </style>

    <public name="RpPickerDialogWeekBtnStyle" type="style" />
    <style name="RpPickerDialogWeekBtnStyle" parent="RpPickerWeekBtnStyle">
        <item name="android:layout_width">@dimen/rp_week_btn_size_dialog</item>
        <item name="android:layout_height">@dimen/rp_week_btn_size_dialog</item>
    </style>

    <style name="RpShapeAppearanceOverlayRound">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>
